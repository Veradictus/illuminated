{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "removeComments": false,
    "module": "esnext",
    "target": "es2019",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "name": "Illuminated",
    "hideGenerator": true,
    "theme": "default"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
