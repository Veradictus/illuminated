{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": false,
    "module": "esnext",
    "target": "es6",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    // "sourceRoot": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "name": "Illuminated",
    "hideGenerator": true
  },
  "files": ["./src/illuminated.ts", "./src/types.d.ts"],
  "exclude": ["node_modules/"]
}
